<%- include('layout', { body: `
<div class="auth-container">
  <h1>Login</h1>

  ${typeof error !== 'undefined' && error ? `<div class="alert alert-error">${error}</div>` : ''}

  <form id="login-form" class="auth-form">
    <div class="form-group">
      <label for="username">Click to see your passkey</label>
      <input type="text" id="username" name="username" placeholder="Select your passkey..." autocomplete="username webauthn" readonly>
    </div>

    <p class="login-hint">Or use the button below:</p>
    <button type="button" id="passkey-login-btn" class="btn btn-primary btn-block">Login with Passkey</button>
  </form>

  <div id="login-status" class="status-message"></div>
</div>
` }) %>

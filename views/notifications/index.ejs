<%- include('../layout', { body: `
<div class="mb-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-pub-heading font-bold text-pub-chalk-text flex items-center gap-3">
      <span class="text-2xl">ðŸ””</span>
      Notifications
    </h1>
    ${unreadCount > 0 ? '<form action="/notifications/mark-all-read" method="POST"><button type="submit" class="text-sm text-neon-blue hover:text-neon-pink transition-colors font-pub-heading">Mark all as read</button></form>' : ''}
  </div>

  ${notifications.length === 0
    ? '<div class="card p-12 text-center"><div class="w-16 h-16 bg-pub-wood-medium rounded-full flex items-center justify-center mx-auto mb-4 border-2 border-pub-wood-light"><span class="text-2xl">ðŸ”•</span></div><p class="text-pub-chalk-accent">No notifications yet</p></div>'
    : '<div class="space-y-2">' + notifications.map(n => {
        const linkUrl = n.reference_id ? '/games/' + n.reference_id : '#';
        const isClickable = n.reference_id ? 'hover:border-neon-pink/30' : '';
        return '<' + (n.reference_id ? 'a href="' + linkUrl + '"' : 'div') + ' class="block card p-4 transition-all ' + isClickable + ' ' + (n.read_at ? 'opacity-60' : '') + '"><div class="flex items-start gap-3"><div class="w-3 h-3 mt-1.5 rounded-full flex-shrink-0 ' + (n.read_at ? 'bg-pub-chalk-accent' : 'bg-neon-pink shadow-neon-pink-sm') + '"></div><div class="flex-1 min-w-0"><p class="text-pub-chalk-text break-words">' + n.message + '</p><p class="text-xs text-pub-chalk-accent mt-1">' + new Date(n.created_at).toLocaleString() + '</p></div></div></' + (n.reference_id ? 'a' : 'div') + '>';
      }).join('') + '</div>'
  }
</div>
` }) %>

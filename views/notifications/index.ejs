<%- include('../layout', { body: `
<div class="mb-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-slate-50">Notifications</h1>
    ${unreadCount > 0 ? '<form action="/notifications/mark-all-read" method="POST"><button type="submit" class="text-sm text-blue-400 hover:text-blue-300">Mark all as read</button></form>' : ''}
  </div>

  ${notifications.length === 0
    ? '<div class="bg-slate-800 rounded-2xl border border-slate-700 p-12 text-center"><div class="w-16 h-16 bg-slate-700 rounded-full flex items-center justify-center mx-auto mb-4"><svg class="w-8 h-8 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" /></svg></div><p class="text-slate-400">No notifications yet</p></div>'
    : '<div class="space-y-2">' + notifications.map(n => '<a href="/games/' + n.reference_id + '" class="block bg-slate-800 rounded-xl border border-slate-700 p-4 hover:border-slate-600 transition-colors ' + (n.read_at ? 'opacity-60' : '') + '"><div class="flex items-start gap-3"><div class="w-2 h-2 mt-2 rounded-full flex-shrink-0 ' + (n.read_at ? 'bg-slate-600' : 'bg-blue-400') + '"></div><div class="flex-1"><p class="text-slate-200">' + n.message + '</p><p class="text-xs text-slate-500 mt-1">' + new Date(n.created_at).toLocaleString() + '</p></div></div></a>').join('') + '</div>'
  }
</div>
` }) %>

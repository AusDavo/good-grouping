<%- include('layout', { body: `
<div class="max-w-md mx-auto">
  <div class="bg-slate-800 rounded-2xl border border-slate-700 shadow-xl p-8">
    <h1 class="text-2xl font-bold text-slate-50 text-center mb-8">Profile</h1>

    ${typeof error !== 'undefined' && error ? '<div class="bg-rose-900/50 border border-rose-700 text-rose-200 px-4 py-3 rounded-lg mb-6">' + error + '</div>' : ''}

    ${typeof success !== 'undefined' && success ? '<div class="bg-emerald-900/50 border border-emerald-700 text-emerald-200 px-4 py-3 rounded-lg mb-6">' + success + '</div>' : ''}

    <div class="text-center mb-8">
      <div class="mb-4">
        ${user.avatar_url
          ? '<img src="' + user.avatar_url + '" alt="' + user.name + '" class="w-24 h-24 rounded-full object-cover mx-auto ring-4 ring-slate-700">'
          : '<div class="w-24 h-24 rounded-full bg-gradient-to-br from-blue-500 to-blue-700 flex items-center justify-center mx-auto ring-4 ring-slate-700"><span class="text-3xl font-bold text-white">' + user.name.charAt(0).toUpperCase() + '</span></div>'
        }
      </div>

      <form method="POST" action="/profile/avatar" enctype="multipart/form-data" class="space-y-3">
        <div>
          <label for="avatar" class="inline-flex items-center gap-2 px-4 py-2 bg-slate-700 hover:bg-slate-600 text-slate-300 text-sm font-medium rounded-lg cursor-pointer transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Choose Image
          </label>
          <input type="file" id="avatar" name="avatar" accept="image/jpeg,image/png,image/gif,image/webp" class="hidden">
        </div>
        <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white text-sm font-medium rounded-lg transition-colors">
          Upload
        </button>
      </form>

      ${user.avatar_url ? '<form method="POST" action="/profile/avatar/remove" class="mt-2"><button type="submit" class="text-sm text-slate-500 hover:text-rose-400 transition-colors">Remove picture</button></form>' : ''}

      <p class="text-slate-500 text-xs mt-3">Max 2MB. JPG, PNG, GIF, or WebP.</p>
    </div>

    <div class="border-t border-slate-700 pt-8">
      <form method="POST" action="/profile" class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-slate-300 mb-2">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            value="${user.name}"
            required
            minlength="2"
            maxlength="50"
            class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-xl text-slate-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
          >
          <p class="text-slate-500 text-xs mt-2">This is how you appear to others</p>
        </div>

        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-500 text-white font-medium py-3 px-4 rounded-xl transition-all duration-200 hover:shadow-glow-blue">
          Save Name
        </button>
      </form>
    </div>

    <!-- Push Notifications Section -->
    <div class="border-t border-slate-700 pt-8 mt-8">
      <h2 class="text-lg font-semibold text-slate-200 mb-4">Push Notifications</h2>
      <p class="text-sm text-slate-400 mb-4">Get notified when you're added to a new game.</p>

      <div id="push-status" class="mb-4">
        <span class="text-sm text-slate-500">Checking status...</span>
      </div>

      <button id="push-toggle" class="px-4 py-2 bg-slate-700 hover:bg-slate-600 text-slate-300 text-sm font-medium rounded-lg transition-colors disabled:opacity-50">
        Enable Notifications
      </button>

      <p id="push-error" class="text-sm text-rose-400 mt-2 hidden"></p>
    </div>
  </div>
</div>

<script src="/js/push.js"></script>
<script>
document.addEventListener('DOMContentLoaded', async function() {
  const statusEl = document.getElementById('push-status');
  const toggleBtn = document.getElementById('push-toggle');
  const errorEl = document.getElementById('push-error');

  // Check if push is supported
  if (!('serviceWorker' in navigator) || !('PushManager' in window)) {
    statusEl.innerHTML = '<span class="text-slate-500">Push notifications are not supported in your browser.</span>';
    toggleBtn.style.display = 'none';
    return;
  }

  // Wait for service worker registration
  await new Promise(resolve => setTimeout(resolve, 500));

  updateUI();

  toggleBtn.addEventListener('click', async () => {
    toggleBtn.disabled = true;
    errorEl.classList.add('hidden');

    const subscribed = await isPushSubscribed();

    if (subscribed) {
      const success = await unsubscribeFromPush();
      if (!success) {
        errorEl.textContent = 'Failed to disable notifications';
        errorEl.classList.remove('hidden');
      }
    } else {
      // Request permission first
      const permission = await Notification.requestPermission();

      if (permission !== 'granted') {
        errorEl.textContent = 'Notification permission denied';
        errorEl.classList.remove('hidden');
        toggleBtn.disabled = false;
        return;
      }

      const success = await subscribeToPush();
      if (!success) {
        errorEl.textContent = 'Failed to enable notifications. Push may not be configured on the server.';
        errorEl.classList.remove('hidden');
      }
    }

    toggleBtn.disabled = false;
    updateUI();
  });

  async function updateUI() {
    const subscribed = await isPushSubscribed();

    if (subscribed) {
      statusEl.innerHTML = '<span class="inline-flex items-center gap-2 text-emerald-400"><svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Notifications enabled</span>';
      toggleBtn.textContent = 'Disable Notifications';
      toggleBtn.className = 'px-4 py-2 bg-rose-600 hover:bg-rose-500 text-white text-sm font-medium rounded-lg transition-colors';
    } else {
      statusEl.innerHTML = '<span class="text-slate-500">Notifications are disabled</span>';
      toggleBtn.textContent = 'Enable Notifications';
      toggleBtn.className = 'px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white text-sm font-medium rounded-lg transition-colors';
    }
  }
});
</script>
` }) %>

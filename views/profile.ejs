<%- include('layout', { body: `
<div class="max-w-md mx-auto">
  <!-- Player's Corner Card -->
  <div class="card-wood p-8">
    <h1 class="text-2xl font-pub-heading font-bold text-aged-cream text-center mb-8 flex items-center justify-center gap-3">
      <span class="text-2xl">ðŸŽ¯</span>
      Player's Corner
    </h1>

    ${typeof error !== 'undefined' && error ? '<div class="alert alert-error mb-6">' + error + '</div>' : ''}

    ${typeof success !== 'undefined' && success ? '<div class="alert alert-success mb-6">' + success + '</div>' : ''}

    <!-- Avatar Section - Polaroid Style -->
    <div class="text-center mb-8">
      <div class="mb-4 inline-block">
        <div class="avatar-polaroid inline-block">
          ${user.avatar_url
            ? '<img src="' + user.avatar_url + '" alt="' + user.name + '" class="w-24 h-24 rounded-polaroid object-cover">'
            : '<div class="w-24 h-24 rounded-polaroid bg-pub-green-700 flex items-center justify-center"><span class="text-3xl font-bold text-neon-green">' + user.name.charAt(0).toUpperCase() + '</span></div>'
          }
        </div>
      </div>

      <form method="POST" action="/profile/avatar" enctype="multipart/form-data" class="space-y-3">
        <div>
          <label for="avatar" class="btn btn-secondary btn-sm inline-flex items-center gap-2 cursor-pointer">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Choose Image
          </label>
          <input type="file" id="avatar" name="avatar" accept="image/jpeg,image/png,image/gif,image/webp" class="hidden">
        </div>
        <button type="submit" class="btn btn-primary btn-sm">
          Upload
        </button>
      </form>

      ${user.avatar_url ? '<form method="POST" action="/profile/avatar/remove" class="mt-2"><button type="submit" class="text-sm text-pub-chalk-accent hover:text-neon-orange transition-colors">Remove picture</button></form>' : ''}

      <p class="text-pub-chalk-accent text-xs mt-3">Max 2MB. JPG, PNG, GIF, or WebP.</p>
    </div>

    <!-- Name Edit Section -->
    <div class="border-t-2 border-pub-wood-light/30 pt-8">
      <form method="POST" action="/profile" class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-pub-heading text-aged-cream mb-2 uppercase tracking-wider">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            value="${user.name}"
            required
            minlength="2"
            maxlength="50"
            class="input"
          >
          <p class="text-pub-chalk-accent text-xs mt-2">How you appear on the scoreboard</p>
        </div>

        <button type="submit" class="btn btn-primary w-full">
          Save Name
        </button>
      </form>
    </div>

    <!-- Push Notifications Section -->
    <div class="border-t-2 border-pub-wood-light/30 pt-8 mt-8">
      <h2 class="text-lg font-pub-heading font-semibold text-aged-cream mb-4 flex items-center gap-2">
        <span class="text-neon-blue">ðŸ””</span> Notifications
      </h2>
      <p class="text-sm text-pub-chalk-accent mb-4">Get notified when you're called up for a game.</p>

      <div id="push-status" class="mb-4">
        <span class="text-sm text-pub-chalk-accent">Checking status...</span>
      </div>

      <button id="push-toggle" class="btn btn-secondary disabled:opacity-50">
        Enable Notifications
      </button>

      <p id="push-error" class="text-sm text-neon-orange mt-2 hidden"></p>
    </div>
  </div>
</div>

<script src="/js/push.js"></script>
<script>
document.addEventListener('DOMContentLoaded', async function() {
  const statusEl = document.getElementById('push-status');
  const toggleBtn = document.getElementById('push-toggle');
  const errorEl = document.getElementById('push-error');

  // Check if push is supported
  if (!('serviceWorker' in navigator) || !('PushManager' in window)) {
    statusEl.innerHTML = '<span class="text-pub-chalk-accent">Push notifications are not supported in your browser.</span>';
    toggleBtn.style.display = 'none';
    return;
  }

  // Wait for service worker registration
  await new Promise(resolve => setTimeout(resolve, 500));

  updateUI();

  toggleBtn.addEventListener('click', async () => {
    toggleBtn.disabled = true;
    errorEl.classList.add('hidden');

    const subscribed = await isPushSubscribed();

    if (subscribed) {
      const success = await unsubscribeFromPush();
      if (!success) {
        errorEl.textContent = 'Failed to disable notifications';
        errorEl.classList.remove('hidden');
      }
    } else {
      // Request permission first
      const permission = await Notification.requestPermission();

      if (permission !== 'granted') {
        errorEl.textContent = 'Notification permission denied';
        errorEl.classList.remove('hidden');
        toggleBtn.disabled = false;
        return;
      }

      const success = await subscribeToPush();
      if (!success) {
        errorEl.textContent = 'Failed to enable notifications. Push may not be configured on the server.';
        errorEl.classList.remove('hidden');
      }
    }

    toggleBtn.disabled = false;
    updateUI();
  });

  async function updateUI() {
    const subscribed = await isPushSubscribed();

    if (subscribed) {
      statusEl.innerHTML = '<span class="inline-flex items-center gap-2 text-neon-green"><svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Notifications enabled</span>';
      toggleBtn.textContent = 'Disable Notifications';
      toggleBtn.className = 'btn btn-danger';
    } else {
      statusEl.innerHTML = '<span class="text-pub-chalk-accent">Notifications are disabled</span>';
      toggleBtn.textContent = 'Enable Notifications';
      toggleBtn.className = 'btn btn-primary';
    }
  }
});
</script>
` }) %>

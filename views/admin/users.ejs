<%- include('../layout', { body: `
<!-- Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
  <h1 class="text-2xl font-pub-heading font-bold text-pub-chalk-text flex items-center gap-3">
    <span class="text-2xl">ðŸ‘¥</span>
    Manage Users
  </h1>
  <a href="/admin/invites" class="btn btn-secondary inline-flex items-center gap-2">
    <span>ðŸ“¬</span>
    Invitations
  </a>
</div>

<!-- Users Section -->
<section>
  <h2 class="text-lg font-pub-heading font-semibold text-pub-chalk-text mb-4 flex items-center gap-2">
    <span class="w-3 h-3 bg-neon-green rounded-full shadow-neon-green"></span>
    Active Users
  </h2>

  ${allUsers.length === 0 ? '<div class="card p-6 text-center"><p class="text-pub-chalk-accent italic">No users found</p></div>' : '<div class="space-y-3">' + allUsers.map(u => {
    const avatar = u.avatar_url
      ? '<img src="' + u.avatar_url + '" alt="" class="w-12 h-12 rounded-full object-cover ring-2 ring-pub-wood-medium">'
      : '<div class="w-12 h-12 rounded-full bg-pub-green-700 flex items-center justify-center ring-2 ring-pub-wood-medium"><span class="text-lg font-bold text-neon-green">' + u.name.charAt(0).toUpperCase() + '</span></div>';

    const isSelf = u.id === user.id;
    const roleBadge = u.is_admin
      ? '<span class="inline-flex items-center gap-1 px-2 py-1 bg-neon-yellow/20 border border-neon-yellow/50 text-neon-yellow text-xs rounded-lg font-pub-heading"><svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>Admin</span>'
      : '<span class="text-pub-chalk-accent text-xs">Member</span>';

    let actions = '';
    if (isSelf) {
      if (u.is_admin) {
        actions = adminCount > 1
          ? '<form action="/admin/users/' + u.id + '/demote" method="POST" onsubmit="return confirm(&apos;Step down as admin? You will lose admin privileges.&apos;)"><button type="submit" class="btn btn-secondary btn-sm w-full">Step Down</button></form>'
          : '<span class="text-pub-chalk-accent text-xs italic">Last admin</span>';
      }
    } else {
      if (u.is_admin) {
        actions = '<span class="text-pub-chalk-accent text-xs italic">Admin</span>';
      } else {
        actions = '<div class="flex gap-2"><form action="/admin/users/' + u.id + '/promote" method="POST"><button type="submit" class="btn btn-secondary btn-sm">Promote</button></form><form action="/admin/users/' + u.id + '/remove" method="POST" onsubmit="return confirm(&apos;Remove this user? They will no longer be able to log in, but their game history will be preserved.&apos;)"><button type="submit" class="btn btn-danger btn-sm">Remove</button></form></div>';
      }
    }

    return '<div class="card p-4"><div class="flex items-start gap-4"><div class="flex-shrink-0">' + avatar + '</div><div class="flex-1 min-w-0"><div class="flex items-center gap-2 flex-wrap"><span class="text-pub-chalk-text font-medium text-lg">' + u.name + '</span>' + (isSelf ? '<span class="text-neon-blue text-xs">(you)</span>' : '') + '</div><div class="flex items-center gap-3 mt-1 text-sm">' + roleBadge + '<span class="text-pub-chalk-accent">Joined ' + new Date(u.created_at).toLocaleDateString() + '</span></div><div class="mt-3">' + actions + '</div></div></div></div>';
  }).join('') + '</div>'}
</section>

<!-- Info Box -->
<div class="mt-8 p-4 bg-pub-brown-800/50 border-2 border-pub-wood-medium rounded-lg">
  <h3 class="text-sm font-pub-heading font-semibold text-pub-chalk-text mb-2">About User Management</h3>
  <ul class="text-pub-chalk-accent text-sm space-y-1">
    <li><span class="text-neon-green font-semibold">Promote</span> - makes a user an admin with full access</li>
    <li><span class="text-neon-blue font-semibold">Step Down</span> - removes your own admin status (requires another admin)</li>
    <li><span class="text-neon-orange font-semibold">Remove</span> - soft-deletes the user, preserving their game history</li>
  </ul>
</div>
` }) %>

<%- include('../layout', { body: `
<div class="flex items-center gap-4 mb-8">
  <a href="/" class="inline-flex items-center gap-2 px-4 py-2 bg-slate-700 hover:bg-slate-600 text-slate-300 text-sm font-medium rounded-xl transition-colors duration-200">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    Back
  </a>
  <h1 class="text-2xl font-bold text-slate-50 flex items-center gap-3">
    <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
    </svg>
    ${game.game_type}
  </h1>
</div>

<div class="bg-slate-800 rounded-2xl border border-slate-700 overflow-hidden">
  <div class="p-6 border-b border-slate-700">
    <div class="flex flex-wrap gap-6 text-sm">
      <div class="flex items-center gap-2 text-slate-400">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <span>${new Date(game.played_at).toLocaleDateString()}</span>
      </div>
      <div class="flex items-center gap-2 text-slate-400">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        <span>Posted by ${game.created_by_name}</span>
      </div>
    </div>
  </div>

  <div class="p-6">
    <h2 class="text-lg font-semibold text-slate-200 mb-4">Results</h2>
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="border-b border-slate-700">
            <th class="text-left py-3 px-4 text-sm font-medium text-slate-400">Player</th>
            <th class="text-left py-3 px-4 text-sm font-medium text-slate-400">Score</th>
            <th class="text-left py-3 px-4 text-sm font-medium text-slate-400">Result</th>
            <th class="text-left py-3 px-4 text-sm font-medium text-slate-400">Confirmed</th>
          </tr>
        </thead>
        <tbody>
          ${(() => {
            // Only Cricket uses score-based winner detection; 301/501 are first-to-zero games
            const scoreBasedGames = ['Cricket'];
            const isScoreBased = scoreBasedGames.includes(game.game_type);
            const hasWinner = game.players.some(p => p.is_winner);
            const playersWithScores = game.players.filter(p => p.score !== null);
            const maxScore = playersWithScores.length > 0 ? Math.max(...playersWithScores.map(p => p.score)) : null;
            const isDraw = isScoreBased && !hasWinner && maxScore !== null && playersWithScores.filter(p => p.score === maxScore).length > 1;

            return game.players.map(p => {
              const isDrawPlayer = isDraw && p.score === maxScore;
              let resultBadge = '';
              let rowClass = 'border-b border-slate-700/50';

              if (p.is_winner) {
                rowClass += ' bg-emerald-900/20';
                resultBadge = '<span class="inline-flex items-center gap-1 bg-emerald-600 text-white text-xs px-2.5 py-1 rounded-full font-medium"><svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>Winner</span>';
                if (p.checkout_darts) {
                  resultBadge += '<span class="text-emerald-400 text-xs ml-2">' + p.checkout_darts + ' dart checkout</span>';
                }
              } else if (isDrawPlayer) {
                rowClass += ' bg-amber-900/20';
                resultBadge = '<span class="inline-flex items-center gap-1 bg-amber-600 text-white text-xs px-2.5 py-1 rounded-full font-medium"><svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/></svg>Draw</span>';
              }

              const avatar = p.avatar_url
                ? '<img src="' + p.avatar_url + '" alt="" class="w-8 h-8 rounded-full object-cover ring-2 ring-slate-600">'
                : '<div class="w-8 h-8 rounded-full bg-gradient-to-br from-blue-500 to-blue-700 flex items-center justify-center ring-2 ring-slate-600"><span class="text-xs font-semibold text-white">' + p.name.charAt(0).toUpperCase() + '</span></div>';

              return '<tr class="' + rowClass + '"><td class="py-3 px-4"><a href="/users/' + p.user_id + '" class="inline-flex items-center gap-3 hover:opacity-80 transition-opacity">' + avatar + '<span class="text-slate-200 font-medium hover:underline">' + p.name + '</span></a></td><td class="py-3 px-4 text-slate-400">' + (p.score !== null ? p.score : '-') + '</td><td class="py-3 px-4">' + resultBadge + '</td><td class="py-3 px-4">' + (p.confirmed_at ? '<svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>' : '<span class="text-slate-500 text-sm">Pending</span>') + '</td></tr>';
            }).join('');
          })()}
        </tbody>
      </table>
    </div>

    ${(() => {
      const unconfirmed = game.players.filter(p => !p.confirmed_at);
      if (unconfirmed.length === 0) return '';
      return '<div class="mt-4 p-3 bg-amber-900/20 border border-amber-700/50 rounded-lg"><p class="text-sm text-amber-200">Pending confirmation from: ' + unconfirmed.map(p => p.name).join(', ') + '</p></div>';
    })()}

    ${(() => {
      if (typeof user === 'undefined' || !user) return '';
      const userPlayer = game.players.find(p => p.user_id === user.id);
      if (!userPlayer || userPlayer.confirmed_at) return '';
      return '<div class="mt-6 p-4 bg-blue-900/20 border border-blue-700/50 rounded-lg"><p class="text-slate-300 mb-3">You participated in this game. Please confirm the results are accurate.</p><form action="/games/' + game.id + '/confirm" method="POST"><button type="submit" class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white text-sm font-medium rounded-xl transition-colors duration-200"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>Confirm Results</button></form></div>';
    })()}
  </div>

  ${game.notes ? '<div class="p-6 border-t border-slate-700 bg-slate-800/50"><h2 class="text-lg font-semibold text-slate-200 mb-3">Notes</h2><p class="text-slate-400">' + game.notes + '</p></div>' : ''}

  ${(typeof user !== 'undefined' && user && (game.created_by === user.id || user.is_admin)) ? '<div class="p-6 border-t border-slate-700 bg-slate-900/50"><form action="/games/' + game.id + '/delete" method="POST" onsubmit="return confirm(&apos;Are you sure you want to delete this game?&apos;)"><button type="submit" class="inline-flex items-center gap-2 px-4 py-2 bg-rose-600 hover:bg-rose-500 text-white text-sm font-medium rounded-xl transition-colors duration-200"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>Delete Game</button></form></div>' : ''}
</div>
` }) %>

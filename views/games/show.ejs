<%- include('../layout', { body: `
<!-- Header with Back Button -->
<div class="flex items-center gap-4 mb-8">
  <a href="/" class="btn btn-secondary btn-sm inline-flex items-center gap-2">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    Back to Board
  </a>
  <h1 class="text-2xl font-pub-heading font-bold text-pub-chalk-text flex items-center gap-3">
    <span class="text-2xl">${game.game_type === 'Cricket' ? 'ü¶ó' : game.game_type === '301' || game.game_type === '501' ? 'üéØ' : game.game_type === 'Around the World' ? 'üåç' : 'üé≤'}</span>
    ${game.game_type}
  </h1>
</div>

${(() => {
  if (!game.deletion_requested_by) return '';
  const requester = game.players.find(p => p.user_id === game.deletion_requested_by);
  const requesterName = requester ? requester.name : 'Someone';
  const isRequester = typeof user !== 'undefined' && user && game.deletion_requested_by === user.id;
  const isParticipant = typeof user !== 'undefined' && user && game.players.some(p => p.user_id === user.id);
  const hasApproved = typeof deletionApprovals !== 'undefined' && typeof user !== 'undefined' && user && deletionApprovals.some(a => a.user_id === user.id);
  const approvalCount = typeof deletionApprovals !== 'undefined' ? deletionApprovals.length : 0;

  let actionButtons = '';
  if (isRequester) {
    actionButtons = '<form action="/games/' + game.id + '/cancel-deletion" method="POST" class="inline"><button type="submit" class="btn btn-secondary btn-sm">Cancel Request</button></form>';
  } else if (isParticipant && !hasApproved) {
    actionButtons = '<form action="/games/' + game.id + '/approve-deletion" method="POST" class="inline" onsubmit="return confirm(&apos;Approve deletion of this game? This cannot be undone.&apos;)"><button type="submit" class="btn btn-danger btn-sm">Approve Deletion</button></form>';
  } else if (hasApproved) {
    actionButtons = '<span class="text-sm text-neon-orange">You approved deletion</span>';
  }

  return '<div class="mb-6 p-4 bg-neon-orange/20 border-2 border-neon-orange/50 rounded-lg"><div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4"><div class="flex items-center gap-3"><svg class="w-6 h-6 text-neon-orange flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg><div><p class="text-neon-orange font-pub-heading font-semibold">Deletion Requested</p><p class="text-pub-chalk-accent text-sm">' + requesterName + ' has requested to delete this game. Needs ' + (2 - approvalCount) + ' more approval(s).</p></div></div><div>' + actionButtons + '</div></div></div>';
})()}

<!-- Main Game Card -->
<div class="card overflow-hidden">
  <!-- Game Meta Info -->
  <div class="chalk-header p-6 border-b-2 border-pub-wood-medium">
    <div class="flex flex-wrap gap-6 text-sm">
      <div class="flex items-center gap-2 text-pub-chalk-accent">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <span>${new Date(game.played_at).toLocaleDateString()}</span>
      </div>
      <div class="flex items-center gap-2 text-pub-chalk-accent">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        <span>Chalked by ${game.created_by_name}</span>
      </div>
    </div>
  </div>

  <!-- Results Table -->
  <div class="p-6">
    <h2 class="text-lg font-pub-heading font-semibold text-pub-chalk-text mb-4 flex items-center gap-2">
      <span class="text-neon-pink">üìä</span> Match Results
    </h2>
    <div class="overflow-x-auto">
      <table class="pub-table">
        <thead>
          <tr>
            <th>Player</th>
            <th>Score</th>
            <th>Result</th>
            <th>Confirmed</th>
          </tr>
        </thead>
        <tbody>
          ${(() => {
            // Only Cricket uses score-based winner detection; 301/501 are first-to-zero games
            const scoreBasedGames = ['Cricket'];
            const isScoreBased = scoreBasedGames.includes(game.game_type);
            const hasWinner = game.players.some(p => p.is_winner);
            const playersWithScores = game.players.filter(p => p.score !== null);
            const maxScore = playersWithScores.length > 0 ? Math.max(...playersWithScores.map(p => p.score)) : null;
            const isDraw = isScoreBased && !hasWinner && maxScore !== null && playersWithScores.filter(p => p.score === maxScore).length > 1;

            return game.players.map(p => {
              const isDrawPlayer = isDraw && p.score === maxScore;
              let resultBadge = '';
              let rowClass = '';

              if (p.is_winner) {
                rowClass = 'bg-neon-green/10';
                resultBadge = '<span class="badge-winner"><svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>Winner</span>';
                if (p.checkout_darts) {
                  resultBadge += '<span class="text-neon-green text-xs ml-2 font-pub-display" style="font-size:8px;">' + p.checkout_darts + ' dart checkout</span>';
                }
              } else if (isDrawPlayer) {
                rowClass = 'bg-neon-yellow/10';
                resultBadge = '<span class="badge-draw"><svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/></svg>Draw</span>';
              }

              const avatar = p.avatar_url
                ? '<img src="' + p.avatar_url + '" alt="" class="w-8 h-8 rounded-full object-cover ring-2 ring-pub-wood-medium">'
                : '<div class="w-8 h-8 rounded-full bg-pub-green-700 flex items-center justify-center ring-2 ring-pub-wood-medium"><span class="text-xs font-bold text-neon-green">' + p.name.charAt(0).toUpperCase() + '</span></div>';

              return '<tr class="' + rowClass + '"><td><a href="/users/' + p.user_id + '" class="inline-flex items-center gap-3 hover:opacity-80 transition-opacity">' + avatar + '<span class="text-pub-chalk-text font-medium hover:underline">' + p.name + '</span></a></td><td class="font-pub-display text-neon-blue" style="font-size:12px;">' + (p.score !== null ? p.score : '-') + '</td><td>' + resultBadge + '</td><td>' + (p.confirmed_at ? '<svg class="w-5 h-5 text-neon-green" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>' : '<span class="text-pub-chalk-accent text-sm">Pending</span>') + '</td></tr>';
            }).join('');
          })()}
        </tbody>
      </table>
    </div>

    ${(() => {
      const unconfirmed = game.players.filter(p => !p.confirmed_at);
      if (unconfirmed.length === 0) return '';
      return '<div class="mt-4 p-3 bg-neon-yellow/10 border-2 border-neon-yellow/30 rounded-lg"><p class="text-sm text-neon-yellow">‚è≥ Waiting on: ' + unconfirmed.map(p => p.name).join(', ') + '</p></div>';
    })()}

    ${(() => {
      if (typeof user === 'undefined' || !user) return '';
      const userPlayer = game.players.find(p => p.user_id === user.id);
      if (!userPlayer || userPlayer.confirmed_at) return '';
      return '<div class="mt-6 p-4 bg-neon-blue/10 border-2 border-neon-blue/30 rounded-lg"><p class="text-pub-chalk-text mb-3">You were at the oche for this one. Confirm the results look right?</p><form action="/games/' + game.id + '/confirm" method="POST"><button type="submit" class="btn btn-primary inline-flex items-center gap-2"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>Confirm Results</button></form></div>';
    })()}
  </div>

  ${game.notes ? '<div class="p-6 border-t-2 border-pub-wood-medium/50 bg-pub-brown-800/30"><h2 class="text-lg font-pub-heading font-semibold text-pub-chalk-text mb-3 flex items-center gap-2"><span>üí¨</span> Match Notes</h2><div class="speech-bubble"><p class="text-pub-chalk-text italic">"' + game.notes + '"</p></div></div>' : ''}

  <!-- Photos Section -->
  <div class="p-6 border-t-2 border-pub-wood-medium/50 bg-pub-brown-800/30">
    <h2 class="text-lg font-pub-heading font-semibold text-pub-chalk-text mb-4 flex items-center gap-2">
      <span>üì∑</span> Photos
      ${(() => {
        const pCount = typeof photoCount !== 'undefined' ? photoCount : 0;
        const pMax = typeof maxPhotos !== 'undefined' ? maxPhotos : 10;
        return '<span class="text-sm text-pub-chalk-accent font-normal">(' + pCount + '/' + pMax + ')</span>';
      })()}
    </h2>

    ${(() => {
      const photosList = typeof photos !== 'undefined' ? photos : [];

      if (photosList.length === 0) {
        return '<p class="text-pub-chalk-accent text-sm italic mb-4">No photos yet. Capture the moment!</p>';
      }

      return '<div class="grid grid-cols-2 md:grid-cols-3 gap-3 mb-4">' + photosList.map(p => {
        const canDelete = typeof user !== 'undefined' && user && (p.user_id === user.id || user.is_admin);
        const deleteBtn = canDelete
          ? '<form action="/games/' + game.id + '/photos/' + p.id + '/delete" method="POST" class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity" onsubmit="return confirm(&apos;Delete this photo?&apos;)"><button type="submit" class="bg-black/70 hover:bg-neon-pink text-white rounded-full w-7 h-7 flex items-center justify-center transition-colors"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg></button></form>'
          : '';

        const caption = p.caption
          ? '<div class="absolute bottom-0 left-0 right-0 bg-black/70 p-2"><p class="text-white text-xs truncate">' + p.caption.replace(/</g, '&lt;').replace(/>/g, '&gt;') + '</p></div>'
          : '';

        return '<div class="relative group"><a href="/uploads/game-photos/' + p.filename + '" target="_blank" class="block aspect-square overflow-hidden rounded-lg border-2 border-pub-wood-medium hover:border-neon-blue transition-colors"><img src="/uploads/game-photos/' + p.filename + '" alt="Game photo" class="w-full h-full object-cover"></a>' + deleteBtn + caption + '</div>';
      }).join('') + '</div>';
    })()}

    ${(() => {
      if (typeof user === 'undefined' || !user) return '';

      // Check if user is a participant
      const isParticipant = game.players.some(p => p.user_id === user.id);
      if (!isParticipant) return '';

      const pCount = typeof photoCount !== 'undefined' ? photoCount : 0;
      const pMax = typeof maxPhotos !== 'undefined' ? maxPhotos : 10;
      const remaining = pMax - pCount;

      if (remaining <= 0) {
        return '<p class="text-pub-chalk-accent text-sm">Photo limit reached for this game.</p>';
      }

      return '<form action="/games/' + game.id + '/photos" method="POST" enctype="multipart/form-data" class="mt-4 p-4 bg-pub-brown-900/50 rounded-lg border-2 border-pub-wood-medium"><div class="flex flex-col gap-3"><div><label class="block text-pub-chalk-text text-sm font-medium mb-2">Add a photo</label><input type="file" name="photo" accept="image/jpeg,image/png,image/gif,image/webp" required class="block w-full text-sm text-pub-chalk-text file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-neon-blue file:text-white hover:file:bg-neon-blue/80 file:cursor-pointer cursor-pointer"></div><div><input type="text" name="caption" placeholder="Caption (optional)" maxlength="200" class="w-full bg-pub-brown-900/50 border-2 border-pub-wood-medium rounded-lg p-2 text-pub-chalk-text placeholder-pub-chalk-accent/50 text-sm focus:outline-none focus:border-neon-blue transition-colors"></div><div class="flex items-center justify-between"><span class="text-pub-chalk-accent text-xs">' + remaining + ' photo(s) remaining ‚Ä¢ Max 5MB</span><button type="submit" class="btn btn-primary btn-sm">Upload</button></div></div></form>';
    })()}
  </div>

  <!-- Comments Section -->
  <div class="p-6 border-t-2 border-pub-wood-medium/50 bg-pub-brown-800/30">
    <h2 class="text-lg font-pub-heading font-semibold text-pub-chalk-text mb-4 flex items-center gap-2">
      <span>üó®Ô∏è</span> Comments
    </h2>

    ${(() => {
      const commentsList = typeof comments !== 'undefined' ? comments : [];

      if (commentsList.length === 0) {
        return '<p class="text-pub-chalk-accent text-sm italic">No comments yet. Be the first to share your thoughts!</p>';
      }

      return '<div class="space-y-4">' + commentsList.map(c => {
        const avatar = c.avatar_url
          ? '<img src="' + c.avatar_url + '" alt="" class="w-8 h-8 rounded-full object-cover ring-2 ring-pub-wood-medium flex-shrink-0">'
          : '<div class="w-8 h-8 rounded-full bg-pub-green-700 flex items-center justify-center ring-2 ring-pub-wood-medium flex-shrink-0"><span class="text-xs font-bold text-neon-green">' + c.name.charAt(0).toUpperCase() + '</span></div>';

        const timeAgo = (() => {
          const now = new Date();
          const commentTime = new Date(c.created_at + 'Z');
          const diffMs = now - commentTime;
          const diffMins = Math.floor(diffMs / 60000);
          const diffHours = Math.floor(diffMs / 3600000);
          const diffDays = Math.floor(diffMs / 86400000);

          if (diffMins < 1) return 'just now';
          if (diffMins < 60) return diffMins + 'm ago';
          if (diffHours < 24) return diffHours + 'h ago';
          if (diffDays < 7) return diffDays + 'd ago';
          return commentTime.toLocaleDateString();
        })();

        const canDelete = typeof user !== 'undefined' && user && (c.user_id === user.id || user.is_admin);
        const deleteBtn = canDelete
          ? '<form action="/games/' + game.id + '/comments/' + c.id + '/delete" method="POST" class="inline" onsubmit="return confirm(&apos;Delete this comment?&apos;)"><button type="submit" class="text-pub-chalk-accent hover:text-neon-pink text-xs transition-colors">Delete</button></form>'
          : '';

        return '<div class="speech-bubble"><div class="flex items-start gap-3"><a href="/users/' + c.user_id + '" class="hover:opacity-80 transition-opacity">' + avatar + '</a><div class="flex-1 min-w-0"><div class="flex items-center gap-2 mb-1"><a href="/users/' + c.user_id + '" class="text-pub-chalk-text font-medium text-sm hover:underline">' + c.name + '</a><span class="text-pub-chalk-accent text-xs">' + timeAgo + '</span>' + deleteBtn + '</div><p class="text-pub-chalk-text text-sm break-words">' + c.content.replace(/</g, '&lt;').replace(/>/g, '&gt;') + '</p></div></div></div>';
      }).join('') + '</div>';
    })()}

    ${(() => {
      if (typeof user === 'undefined' || !user) return '';

      return '<form action="/games/' + game.id + '/comments" method="POST" class="mt-4"><div class="flex gap-3"><textarea name="content" placeholder="Add a comment..." maxlength="500" required class="flex-1 bg-pub-brown-900/50 border-2 border-pub-wood-medium rounded-lg p-3 text-pub-chalk-text placeholder-pub-chalk-accent/50 text-sm resize-none focus:outline-none focus:border-neon-blue transition-colors" rows="2"></textarea><button type="submit" class="btn btn-primary self-end">Post</button></div><p class="text-pub-chalk-accent text-xs mt-1">Max 500 characters</p></form>';
    })()}
  </div>

  ${(() => {
  if (typeof user === 'undefined' || !user) return '';
  const isParticipant = game.players.some(p => p.user_id === user.id);
  const isAdmin = user.is_admin;
  if (!isParticipant && !isAdmin) return '';

  // Don't show delete if there's already a pending deletion request
  if (game.deletion_requested_by) return '';

  const confirmedCount = game.players.filter(p => p.confirmed_at).length;
  const needsApproval = confirmedCount >= 2 && !isAdmin;
  const buttonText = needsApproval ? 'Request Deletion' : 'Erase Game';
  const confirmMsg = needsApproval
    ? 'Request to delete this game? Another participant will need to approve.'
    : 'Rub this one off the board? This cannot be undone.';

  return '<div class="p-6 border-t-2 border-pub-wood-medium/50 bg-pub-brown-900/30"><form action="/games/' + game.id + '/delete" method="POST" onsubmit="return confirm(&apos;' + confirmMsg + '&apos;)"><button type="submit" class="btn btn-danger inline-flex items-center gap-2"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>' + buttonText + '</button></form></div>';
})()}
</div>
` }) %>

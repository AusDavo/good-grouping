<%- include('layout', { body: `
<div class="max-w-md mx-auto mt-12">
  <div class="bg-slate-800 rounded-2xl border border-slate-700 shadow-xl p-8">
    <div class="text-center mb-8">
      <div class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-emerald-700 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-glow-emerald">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-slate-50">
        ${typeof isFirstUser !== 'undefined' && isFirstUser ? 'Create Admin Account' : 'Create Account'}
      </h1>
      <p class="text-slate-400 mt-2">Set up your passkey to get started</p>
    </div>

    ${typeof isFirstUser !== 'undefined' && isFirstUser ? '<div class="bg-blue-900/30 border border-blue-700/50 text-blue-200 px-4 py-3 rounded-lg mb-6 text-sm"><div class="flex items-center gap-2"><svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg><span>You are creating the first account, which will have admin privileges.</span></div></div>' : ''}

    ${typeof error !== 'undefined' && error ? '<div class="bg-rose-900/50 border border-rose-700 text-rose-200 px-4 py-3 rounded-lg mb-6">' + error + '</div>' : ''}

    <form id="register-form" class="space-y-6">
      <input type="hidden" id="token" value="${token}">

      <div>
        <label for="username" class="block text-sm font-medium text-slate-300 mb-2">Name</label>
        <input
          type="text"
          id="username"
          name="username"
          required
          minlength="2"
          maxlength="50"
          class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-xl text-slate-50 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all duration-200"
          placeholder="Enter your name"
        >
        <p class="text-slate-500 text-xs mt-2">This is how you'll appear to others</p>
      </div>

      <button type="submit" class="w-full bg-emerald-600 hover:bg-emerald-500 text-white font-medium py-3 px-4 rounded-xl transition-all duration-200 hover:shadow-glow-emerald focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 focus:ring-offset-slate-800 flex items-center justify-center gap-3">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4" />
        </svg>
        Register with Passkey
      </button>
    </form>

    <div id="register-status" class="mt-4 text-center text-slate-400 text-sm"></div>
  </div>
</div>
` }) %>

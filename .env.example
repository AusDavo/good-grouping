# Server configuration
PORT=3000
NODE_ENV=production

# Session secret - CHANGE THIS to a long random string
SESSION_SECRET=change-this-to-a-secure-random-string

# WebAuthn configuration
# RP_NAME is displayed to users during passkey registration
RP_NAME=Dart Score Sharing

# RP_ID should be your domain (without protocol or port)
# For local development: localhost
# For production: yourdomain.com
RP_ID=localhost

# ORIGIN is the full URL where the app is accessed
# Must match RP_ID domain
ORIGIN=http://localhost:3000

# BASE_URL is the full URL where the app is accessed (used for generating invite links)
# Should match ORIGIN
BASE_URL=http://localhost:3000

# Set to true if running behind a reverse proxy (nginx, Traefik, etc.)
TRUST_PROXY=false
